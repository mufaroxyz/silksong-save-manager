{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Biome Format",
			"type": "shell",
			"command": "bunx",
			"args": ["@biomejs/biome", "format", "--write", "."],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Biome Lint",
			"type": "shell",
			"command": "bunx",
			"args": ["@biomejs/biome", "lint", "."],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		}
	]
}
