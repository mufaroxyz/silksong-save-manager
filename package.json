{
	"name": "silksong-save-manager",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"dev": "turbo dev",
		"build": "turbo build",
		"build:rust": "turbo build --filter=@save-manager/decrypt-wasm",
		"build:web-only": "turbo build --filter=web",
		"deploy": "turbo deploy --filter=web",
		"deploy:prod": "turbo deploy:prod --filter=web",
		"deploy:quick": "bun run build:web-only && bun run deploy",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"wasm:test": "bun test packages/decrypt-wasm/test/",
		"generate:types": "dotnet run --project packages/assembly-typegen/AssemblyTypeGen -- --outputDir packages/assembly-typegen",
		"= GENERATION EXAMPLE =": "bun generate:types --gameDllPath <path_to_game_dll> --types PlayerData"
	},
	"dependencies": {},
	"devDependencies": {
		"turbo": "^2.5.4",
		"@biomejs/biome": "^2.2.0"
	},
	"packageManager": "bun@1.2.21"
}